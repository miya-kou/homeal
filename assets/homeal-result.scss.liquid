#l-result__selected_item {
  display: block;
  position: relative;
  bottom: 0;
  z-index: 2;
  width: 100%;
  height: auto;
  margin: 0 auto;
  border-radius: rem-calc(30px) rem-calc(30px) 0 0;
  padding: rem-calc(15px) 0;
  background-color: #fff;
  box-sizing: border-box;
  box-shadow: 0 rem-calc(-20px) rem-calc(20px) rgba(0, 0, 0, 0.07);
  @include sp {
    border-radius: rem-calc(20px) rem-calc(20px) 0 0;
    padding: rem-calc(10px) 0;
    box-shadow: 0 rem-calc(-10px) rem-calc(10px) rgba(0, 0, 0, 0.07);
  }
  &.item_hide {
	display: none;
  }
  &.fixed {
    display: block;
    position: fixed;
    left: 0;
    bottom: 0;
    -webkit-transform: translate3d(0,0,0);
    transform: translate3d(0,0,0);
    -webkit-backface-visibility:hidden;
    backface-visibility:hidden;
    overflow:hidden 
  }
  & .c-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 950px;
    @include sp {
      display: block;
    }
  }
}

