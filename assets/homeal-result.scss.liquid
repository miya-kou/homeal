  line-height: 1;
  letter-spacing: 0.02856em;
}

/*----- result recommend -----*/

.p-result__recommend__header_icon {
  width: rem-calc(203px);
  height: auto;
  margin: 0 auto rem-calc(20px);
  @include sp {
    width: rem-calc(160px);
    margin: 0 auto rem-calc(15px);
  }
}

.p-result__recommend__header {
  margin: 0 auto rem-calc(49px);
  font-size: rem-calc(40px);
  font-weight: 600;
  color: #000;
  text-align: center;
  line-height: 1;
  letter-spacing: -0.0454em;
  @include sp {
    margin: 0 auto rem-calc(40px);
    font-size: rem-calc(30px);
    line-height: 1.3;
  }
  & .colored {
    color: $color-orange;
    font-weight: 600;
  }
}

.p-result__recommend__togglebtn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: rem-calc(320px);
  height: rem-calc(50px);
  margin: 0 auto;
  border-radius: rem-calc(25px);
  background-color: #f0f0f0;
  box-sizing: border-box;
  font-size: rem-calc(16px);
  font-weight: 600;
  color: #000;
  line-height: 1;
  @include sp {
    width: 100%;
    height: rem-calc(100px);
    border-radius: rem-calc(50px);
    font-size: rem-calc(22px);
    line-height: 1;
    white-space: nowrap;
  }
  &:before {
    content: "すべての商品を見る";
  }
  &:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }
  &.active {
    &:before {
      content: "その他のメニューを隠す";
    }
  }
}

/*----- result selected -----*/

.p-result__selected_item__infobox {
  display: flex;
  width: 64%;
  height: auto;
  box-sizing: border-box;
  @include sp {
    width: 100%;
    margin-bottom: rem-calc(10px);
    padding-top: 0;
  }
  &:before {
    content: "";
    display: block;
    width: rem-calc(10px);
    height: auto;
    margin-right: rem-calc(15px);
    border-radius: rem-calc(5px);
    background-color: $color-yellow;
    @include sp {
      width: rem-calc(6px);
      margin-right: rem-calc(12px);
      border-radius: rem-calc(3px);
    }
  }
}

.p-result__selected_item__infobox__textarea {
  padding: rem-calc(4.5px) 0 rem-calc(3px);
  @include sp {
    padding: rem-calc(3px) 0;
  }
}

.p-result__selected_item__name {
  margin-bottom: rem-calc(5px);
  font-size: rem-calc(20px);
  font-weight: 600;
  color: #000;
  line-height: 1.5;
  letter-spacing: 0.04em;
  @include sp {
    line-height: 1.35;
    margin-bottom: rem-calc(1px);
    font-size: rem-calc(16px);
  }
}

.p-result__selected_item__price {
  display: flex;
  align-items: flex-end;
  margin: 0 auto rem-calc(10px);
  white-space: nowrap;
  @include sp {
    margin: 0 auto rem-calc(3px);
  }
  & .price {
    margin-right: rem-calc(5px);
    font-size: rem-calc(32px);
    @include c-font--english;
    font-weight: 700;
    color: $color-yellow;
    line-height: 1;
    letter-spacing: -0.01em;
    @include sp {
      font-size: rem-calc(24px);
    }
  }
  & .label {
    margin-right: rem-calc(4px);
    padding-bottom: rem-calc(2px);
    font-size: rem-calc(12px);
    font-weight: 600;
    color: #000;
  }
  & .supplement {
    padding-bottom: rem-calc(2px);
    font-size: rem-calc(12px);
    color: #000;
  }
}

.p-result__selected_item__tag {
  display: inline-block;
  border-radius: rem-calc(10px);
  padding: rem-calc(7px) rem-calc(15px);
  background-color: #ff8c00;
  box-sizing: border-box;
  font-size: rem-calc(16px);
  font-weight: 600;
  color: #fff;
  line-height: 1;
  white-space: nowrap;
  @include sp {
    border-radius: rem-calc(7px);
    padding: rem-calc(6px) rem-calc(10px);
    font-size: rem-calc(12px);
  }
  &.english {
    font-size: rem-calc(19px);
    font-weight: bold;
    @include sp {
      font-size: rem-calc(16px);
    }
  }
}

.p-result__selected_item__btnbox {
  width: rem-calc(335px);
  height: auto;
  @include sp {
    width: 100%;
  }
}

.p-result__selected_item__select_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: rem-calc(40px);
  margin: 0 auto rem-calc(6px);
  border-radius: rem-calc(25px);
  background-color: $color-yellow;
  box-sizing: border-box;
  font-size: rem-calc(15px);
  font-weight: 600;
  line-height: 1;
  white-space: nowrap;
  transition: 0.3s;
  @include sp {
  	height: rem-calc(36px);
    font-size: rem-calc(13px);
  }
  &:hover {
    background-color: #e5b800;
  }
}

.p-result__selected_item__btnbox__supplement {
  margin: 0 auto rem-calc(5px);
  font-size: rem-calc(12px);
  font-weight: 300;
  text-align: center;
  line-height: 1.5;
  @include sp {
    font-size: rem-calc(11px);
  }
}

.p-result__selected_item__purchased_btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: rem-calc(40px);
  margin: 0 auto;
  border-radius: rem-calc(25px);
  background-color: #f5f5f5;
  box-sizing: border-box;
  font-size: rem-calc(15px);
  font-weight: 600;
  line-height: 1;
  white-space: nowrap;
  transition: 0.3s;
  @include sp {
  	height: rem-calc(36px);
    font-size: rem-calc(13px);
  }
  &:hover {
    background-color: #dcdcdc;
  }
}
