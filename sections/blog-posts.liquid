{% elsif blog.handle contains 'news' %}
<section id="l-topics">
  <div class="c-container">

    {% if section.settings.title_en != blank or section.settings.title_jp != blank %}
      <div class="p-titlebox c-slideup">
        {% if section.settings.title_en != blank %}
          <h1 class="p-title">{{ section.settings.title_en }}</h1>
        {% endif %}
        {% if section.settings.title_jp != blank %}
          <p class="p-title--japanese">{{ section.settings.title_jp }}</p>
        {% endif %}
      </div>
    {% elsif blog.handle contains 'news' %}
      <div class="p-titlebox c-slideup">
        <figure class="p-topics_imageBox">
          <picture>
            <source media="(min-width: 769px)" srcset="https://cdn.shopify.com/s/files/1/0412/4347/6136/files/topics_title.png?v=1634108150">
            <img src="https://cdn.shopify.com/s/files/1/0412/4347/6136/files/title_topics_sp.png?v=1634108150" data-src="https://cdn.shopify.com/s/files/1/0412/4347/6136/files/title_topics_sp.png?v=1634108150" class="lazyload" alt="">
            </source>
          </picture>
        </figure>
      </div>
      <div class="p-titlebox c-slideup">
      
    {% endif %}

    {% unless blog.empty? or blog.articles.size == 0 %}

      <ul class="p-topics__lists c-slideup">
        {% for article in blog.articles limit: section.settings.post_limit %}
          <li class="p-topics__list">
            {% if section.settings.blog_show_date or article.tags.size > 0 or articles.comments_count > 0 %}
              {% if section.settings.blog_show_tags and article.tags.size > 0 %}
                {% for tag in article.tags %}
                  {% if tag contains "_" %}{%- assign tag_starts_with = tag | slice: 0 -%}{% if tag_starts_with == "_" %}{% if tag_count %}{%- assign tag_count = tag_count | minus: 1 | at_least: 0 -%}{% endif %}{% continue %}{% endif %}{% endif %}
                  <a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a> &middot;
                {% endfor %}
              {% endif %}
              {% if section.settings.blog_show_comments and article.comments_count > 0 %}
                <a href="{{ article.url }}#comments">
                  {{ 'blogs.comments.with_count' | t: count: article.comments_count }}
                </a> &middot;
              {% endif %}
              {% if section.settings.blog_show_date %}
                <div class="p-topics__date">{{ article.published_at | time_tag: '%Y.%m.%d' }}</div>
              {% endif %}
            {% endif %}

            <h2 class="p-topics__title"><a href="{{ article.url }}" class="">{{ article.title }}</a></h2>

            {% if section.settings.blog_show_author %}
              <div class="">by {{ article.author }}</div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>

    {% endunless %}

    {% if section.settings.view_all %}
      <a href="{{ blog.url }}"  class="p-topics__linkbtn c-slideup">„ÇÇ„Å£„Å®Ë¶ã„Çã</a>
    {% endif %}

  </div>

</section>
{% endif %}

{% if section.settings.divider %}</div>{% endif %}

{% schema %}
  {
    "name": "Blog posts",
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "title_en",
        "label": "Heading English"
      },
      {
        "type": "text",
        "id": "title_jp",
        "label": "Heading Japanese"
      },
      {
        "id": "blog",
        "type": "blog",
        "label": "Blog"
      },
      {
        "type": "range",
        "id": "post_limit",
        "label": "Posts",
        "default": 3,
        "min": 3,
        "max": 12,
        "step": 1
      },
      {
        "type": "checkbox",
        "id": "blog_show_tags",
        "label": "Show tags"
      },
      {
        "type": "checkbox",
        "id": "blog_show_date",
        "label": "Show date",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "blog_show_comments",
        "label": "Show comment count"
      },
      {
        "type": "checkbox",
        "id": "blog_show_author",
        "label": "Show author"
      },
      {
        "type": "checkbox",
        "id": "view_all",
        "label": "Show 'View all' button",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "divider",
        "label": "Show section divider",
        "default": false
      }
    ],
    "presets": [
      {
        "name": "Blog posts",
        "category": "Blog",
        "settings": {
          "blog": "News",
          "post_limit": 3
        }
      }
    ]
  }
{% endschema %}
