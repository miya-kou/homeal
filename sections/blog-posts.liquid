{% if section.settings.divider %}<div class="section--divider">{% endif %}
{% if blog.handle contains 'magazine' %}
<section id="l-magazine">
  <div class="c-container">
    {% if blog.handle contains 'magazine' %}
      <div class="p-titlebox c-slideup">
        <img src="https://cdn.shopify.com/s/files/1/0412/4347/6136/files/homealmagazine_title.png?v=1634107962" data-src="https://cdn.shopify.com/s/files/1/0412/4347/6136/files/homealmagazine_title.png?v=1632797182">
      </div>
    {% else %}
